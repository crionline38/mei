<div class="title">
  <h4><a href="#" onClick="history.go(-1);return true;">
        <i class="fa fa-chevron-circle-left"></i></a></h4>
  <h4>Tarifs</h4>
  <h4><%= link_to new_tarif_path do  %>
  <i class="fa fa-plus-circle" aria-hidden="true" title="Ajouter un tarif"></i>
  <% end %></h4>
</div>
<div class="mycard">
  <table class="striped responsive-table">
    <thead>
      <tr>
        <th>Titre</th>
        <th>+ de 20 ans</th>
        <th>9 - 20 ans</th>
        <th>6 - 8 ans</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tarifs.each do |tarif| %>
        <tr>
          <td><%= tarif.name %></td>
          <td><%= number_to_currency(tarif.a) %></td>
          <td><%= number_to_currency(tarif.b) %></td>
          <td><%= number_to_currency(tarif.c) %></td>
          <td>
            <%= link_to edit_tarif_path(tarif), class: "secondary-content" do %>
              <i class="material-icons">mode_edit</i>
              <i class="fa fa-pencil-alt" aria-hidden="true" title="DÃ©tails"></i>
            <% end %></td>

            <td><%= link_to tarif_path(tarif), class: "secondary-content", method: :delete, data: { confirm: "Supprimer le tarif?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true" title="Supprimer"></i>
            <% end %>
          </td>
          <td><%= tarif.valide %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
