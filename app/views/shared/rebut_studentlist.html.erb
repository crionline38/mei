  <table class="striped responsive-table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th><%= link_to new_adherent_student_path(@adherent) do  %>
    <i class="fa fa-plus-circle" aria-hidden="true" title="Ajouter un élève"></i>
    <% end %></th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr class="pointer" onclick="location.href='<%= student_path(student) %>'">
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td>
            <%= link_to student, class: "", method: :delete, data: { confirm: "Supprimer l'élève?" } do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
