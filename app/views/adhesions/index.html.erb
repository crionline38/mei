<p id="notice"><%= notice %></p>

<h1>Adhesions</h1>

<table class="striped responsive-table">
  <thead>
    <tr>
      <th>Year</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adhesions.each do |adhesion| %>
      <tr>
        <td><%= adhesion.year %></td>
        <td><%= adhesion.user %></td>
        <td><%= link_to 'Show', adhesion %></td>
        <td><%= link_to 'Edit', edit_adhesion_path(adhesion) %></td>
        <td><%= link_to 'Destroy', adhesion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

