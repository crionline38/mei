<div class="title">
  <h4><a href="#" onClick="history.go(-1);return true;">
        <i class="fa fa-chevron-circle-left"></i></a></h4>
  <h4>Instruments</h4>
  <h4><%= link_to new_instrument_path do  %>
  <i class="fa fa-plus-circle" aria-hidden="true" title="Ajouter un adhérent"></i>
  <% end %></h4>
</div>
<div class="mycard">
  <div class="row">
    <div class="col s6 separator padding">
      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Nom</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @instruments.each do |instrument| %>
            <tr class="<%= "tractive" if instrument.id == @active %> pointer"
             onclick="location.href='?instru=<%= instrument.id %>'">
              <td><%= instrument.name %></td>
              <td><%= link_to fa_icon("trash-o"), instrument, class: "secondary-content", method: :delete, data: { confirm: "Supprimer l'instrument'?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col s6">
      <ul id="dropdownf" class="dropdown-content dropdown">
        <% @allformules.each do |formule| %>
          <li><%= link_to formule.name, "#{instruments_path}?instru=#{@active}&formule=#{formule.id}" %></li>
        <% end %>
      </ul>

      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Formules associées <a class="dropdown-button" href="#!" data-activates="dropdownf"><%= fa_icon("plus-circle") %></a></th>
          </tr>
        </thead>
        <tbody>
          <% @formules.each do |formule| %>
            <tr class="pointer" onclick="location.href='<%= edit_discipline_path(formule) %>'">
              <td><%= formule.name %></td>
              <td><%= link_to fa_icon("trash-o"), "#{instruments_path}?instru=#{@active}&dformule=#{formule.id}", class: "secondary-content",:confirm=>'Are you sure?'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
