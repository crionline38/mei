<div class="myflex content-title">
  <p><%= render 'shared/logo' %> / Formules</p>
  <%= render 'shared/logout' %>
</div>


<div class="row back rowshadow">
  <div class="content col s12">
    <div class="row">
      <div class="content-table">
        <table class="striped responsive-table">
          <thead>
            <tr>
              <th colspan="3"></th>
              <th colspan="3" class="center">Tarifs</th>
            </tr>
            <tr>
              <th>Nom</th>
              <th>Dur√©e en min</th>
              <th>Frequence</th>
              <th>+20 ans</th>
              <th>9/20 ans</th>
              <th>6/8 ans</th>
              <th class="right"><%= link_to fa_icon('plus-circle'), new_discipline_path, title: "Ajouter une formule" if @auth %></th>
            </tr>
          </thead>

          <tbody>
            <% @disciplines.each do |discipline| %>
              <tr class="pointer" onclick="location.href='<%= edit_discipline_path(discipline) %>'">
                <td><%= discipline.name %></td>
                <td><%= discipline.duree %></td>
                <td><%= discipline.frequence.name %></td>
                <td><%= discipline.tarif.a %></td>
                <td><%= discipline.tarif.b %></td>
                <td><%= discipline.tarif.c %></td>
                  <td><%= link_to discipline, class: "secondary-content", method: :delete, data: { confirm: "Supprimer la discipline?" } do %>
                    <i class="fa fa-trash-o" aria-hidden="true" title="Supprimer"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
